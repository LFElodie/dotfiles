{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "args": ["--log-file=/tmp/ccls.log", "-v=1"],
      "filetypes": ["c", "cc", "cpp", "c++", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json",".git"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "highlight":{
          "lsRanges" : true
        },
        "client": {
          "snippetSupport": true
        },
        "diagnostics": {
          "onChange": 1
        },
        "clang": {
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.5",
          "extraArgs": [
            "-Isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1",
            "-Isystem/Library/Developer/CommandLineTools/usr/lib/clang/12.0.5/include",
            "-Isystem/Library/Developer/CommandLineTools/usr/include",
            "-Isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
          ]
        }
      }
    }
  }
}
